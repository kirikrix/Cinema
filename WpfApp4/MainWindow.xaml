<Window x:Class="WpfApp4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cinema App" Height="450" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label x:Name="titleLabel" Grid.Row="0" Margin="10" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Label x:Name="timeLabel" Grid.Row="1" Margin="10" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Image x:Name="posterImage" Grid.Row="2" Margin="10" Width="200" Height="300" Stretch="Uniform" />
    </Grid>
</Window>
